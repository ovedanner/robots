<div class="d-flex flex-row p-4 flex-grow-1">
  <div id="game-log-container" class="flex-grow-1">
    <ul>
      {{#each gameLog.events as |event|}}
        {{game-event
          event=event
          user=user}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="d-flex flex-row new-message-container align-self-end flex-shrink-0">
  <div class="flex-grow-1 m-2">
    {{input
      value=newMessage
      title="message"
      type="text"
      placeholder="Enter message"
      class="form-control"
      enter=(action "sendMessage" newMessage)}}
  </div>
  <div class="btn btn-primary m-2" {{action "sendMessage" newMessage}}>Send</div>
</div>