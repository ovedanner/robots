<div id="game-log-header" class="d-flex flex-row flex-shrink-0 justify-content-center p-2 gray-border-bottom">
  <h3>Chat</h3>
</div>
<div id="game-log-container" class="d-flex flex-row flex-grow-1">
  <div id="game-log-container-inner" class="d-flex flex-column flex-grow-1">
    <ul class="p-4">
      {{#each gameLog.events as |event|}}
        {{game-event
          event=event
          user=user}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="d-flex flex-row new-message-container align-self-end flex-shrink-0 gray-border-top">
  <div class="flex-grow-1 m-2">
    {{input
      value=newMessage
      title="message"
      type="text"
      placeholder="Enter message"
      class="form-control"
      enter=(action "sendMessage" newMessage)}}
  </div>
  <div class="btn btn-primary m-2" {{action "sendMessage" newMessage}}>Send</div>
</div>