<div id="room-players-header" class="d-flex justify-content-center gray-border-bottom p-2">
  <h3>Players</h3>
</div>
<div class="p-2">
  {{#each players as |player|}}
    <li>
      {{player.firstname}}
      {{#if player.ready}}
        {{fa-icon "check"}}
      {{else}}
        <span>(not ready)</span>
      {{/if}}
    </li>
  {{/each}}
</div>